<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/accent"
    tools:context=".Activities.DistanceMeasure">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:padding="16dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distance measure"
            android:textSize="24sp"
            android:textColor="@color/accent"
            android:textStyle="bold"
            android:paddingTop="26dp"
            android:paddingStart="26dp"
            android:paddingEnd="2dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="@color/accent"
            android:paddingTop="2dp"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="@color/accent"
            android:paddingTop="2dp"
            android:textAlignment="center"/>
       <TextView
           android:id="@+id/destination_location"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Pick your destination"
           android:textColor="@color/accent"
           android:textSize="14sp"
           android:padding="8dp"
           android:layout_margin="16dp"
           android:onClick="pickDestination"
           android:background="@drawable/ripple_for_distance"/>
        <TextView
            android:id="@+id/current_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pick your location"
            android:textColor="@color/accent"
            android:textSize="14sp"
            android:padding="8dp"
            android:layout_margin="16dp"
            android:onClick="pickCurrentLocation"
            android:background="@drawable/ripple_for_distance"/>

        <fragment
            android:id="@+id/location"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />


    </LinearLayout>

</LinearLayout>